    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "lotId",
      "value": "",
      "type": "string"
    },
    {
      "key": "batchId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('authToken', response.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Inventory Lots",
      "item": [
        {
          "name": "Get All Inventory Lots",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/inventory/lots",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots"]
            }
          }
        },
        {
          "name": "Get Lots with Search Filter",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/inventory/lots?searchTerm=OG&facilityFilter=Main Facility&statusFilter=approved",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots"],
              "query": [
                {
                  "key": "searchTerm",
                  "value": "OG"
                },
                {
                  "key": "facilityFilter",
                  "value": "Main Facility"
                },
                {
                  "key": "statusFilter",
                  "value": "approved"
                }
              ]
            }
          }
        },
        {
          "name": "Get Specific Lot Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/inventory/lots/{{lotId}}",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots", "{{lotId}}"]
            }
          }
        },
        {
          "name": "Adjust Stock Quantity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": -50,\n  \"reason\": \"Quality control sample taken\",\n  \"unit_of_measure\": \"grams\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/inventory/lots/{{lotId}}/adjust",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots", "{{lotId}}", "adjust"]
            }
          }
        },
        {
          "name": "Place Lot in Quarantine",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"quarantine\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/inventory/lots/{{lotId}}/quarantine",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots", "{{lotId}}", "quarantine"]
            }
          }
        },
        {
          "name": "Release Lot from Quarantine",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"release\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/inventory/lots/{{lotId}}/quarantine",
              "host": ["{{baseUrl}}"],
              "path": ["inventory", "lots", "{{lotId}}", "quarantine"]
            }
          }
        }
